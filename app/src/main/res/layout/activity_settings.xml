<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/settings_menu_default_padding_vertical"
            android:paddingStart="@dimen/settings_menu_default_padding_start"
            android:paddingEnd="@dimen/settings_menu_default_padding_end"
            android:text="@string/settings_button1"
            android:textColor="@color/deep_black"
            android:textSize="@dimen/settings_default_textSize" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/share"
            android:paddingVertical="@dimen/settings_menu_default_padding_vertical"
            android:paddingStart="@dimen/settings_menu_default_padding_start"
            android:paddingEnd="@dimen/settings_menu_default_padding_end"
            android:text="@string/settings_button2"
            android:textColor="@color/deep_black"
            android:textSize="@dimen/settings_default_textSize" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/support"
            android:paddingVertical="@dimen/settings_menu_default_padding_vertical"
            android:paddingStart="@dimen/settings_menu_default_padding_start"
            android:paddingEnd="@dimen/settings_menu_default_padding_end"
            android:text="@string/settings_button3"
            android:textColor="@color/deep_black"
            android:textSize="@dimen/settings_default_textSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/arrow_forward"
            android:paddingVertical="@dimen/settings_menu_default_padding_vertical"
            android:paddingStart="@dimen/settings_menu_default_padding_start"
            android:paddingEnd="@dimen/settings_menu_default_padding_end"
            android:text="@string/settings_button4"
            android:textColor="@color/deep_black"
            android:textSize="@dimen/settings_default_textSize" />

    </LinearLayout>


</LinearLayout>