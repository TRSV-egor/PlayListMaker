<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:theme="@style/MainMenu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/ys_display_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="62dp"
            android:paddingBottom="12dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/main_menu_default_textSize" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:divider="@drawable/main_empty_tall_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <Button
            style="@style/MainActivityButtons"
            android:id="@+id/search"
            android:layout_weight="1"
            android:text="@string/main_menu_button1"
            app:icon="@drawable/main_search"
            />

        <Button
            style="@style/MainActivityButtons"
            android:id="@+id/media"
            android:layout_weight="1"
            android:text="@string/main_menu_button2"
            app:icon="@drawable/main_library"/>

        <Button
            style="@style/MainActivityButtons"
            android:id="@+id/settings"
            android:layout_weight="1"
            android:text="@string/settings_name"
            app:icon="@drawable/main_settings"/>

    </LinearLayout>


</LinearLayout>