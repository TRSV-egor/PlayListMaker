<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/theme_switcher"
            style="@style/SettingsActivityMenu"
            android:text="@string/settings_button1"
            app:thumbTint="@color/settings_switcher_thumb"
            app:trackTint="@color/settings_switcher_track"/>


        <TextView
            style="@style/SettingsActivityMenu"
            android:id="@+id/share"
            android:drawableEnd="@drawable/settings_share"
            android:text="@string/settings_button2" />


        <TextView
            style="@style/SettingsActivityMenu"
            android:id="@+id/support"
            android:drawableEnd="@drawable/settings_support"
            android:text="@string/settings_button3" />

        <TextView
            style="@style/SettingsActivityMenu"
            android:id="@+id/user_agreement"
            android:drawableEnd="@drawable/settings_track_arrow_forward"
            android:text="@string/settings_button4" />

    </LinearLayout>


</LinearLayout>